---
import Layout from '@/layouts/Layout.astro'
import Section from '@/components/Section.astro'
---

<Layout title="Example Scroll Page Animation">
  <main
    class="flex flex-col gap-[10dvh] bg-[hsla(216,66%,27%,1)]"
    data-animate="background"
  >
    <Section
      image="https://images.unsplash.com/photo-1708913156542-9042bb5410eb?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    />
    <Section
      image="https://images.unsplash.com/photo-1577973082070-ba274c3d1d33?q=80&w=2535&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    />
    <Section
      image="https://images.unsplash.com/photo-1505576457712-b769c0c0a354?q=80&w=2572&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    />
    <Section
      image="https://images.unsplash.com/photo-1664276052807-cf69ca80cabe?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    />
    <Section
      image="https://images.unsplash.com/photo-1604456930969-37f67bcd6e1e?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
    />
  </main>
</Layout>

<script>
  import { gsap } from 'gsap'
  import { ScrollTrigger } from 'gsap/ScrollTrigger'

  gsap.registerPlugin(ScrollTrigger)

  interface AnimatedElement extends Element {
    dataset?: DOMStringMap
    timeline?: gsap.core.Timeline
  }

  const mm = gsap.matchMedia()

  export const mmFilters = {
    isDesktop: '(min-width: 768px)',
    isMobile: '(max-width: 767.98px)',
    reduceMotion: '(prefers-reduced-motion: reduce)',
  }

  mm.add(mmFilters, (context) => {
    let { isMobile, reduceMotion } =
      context.conditions ?? {}

    if (isMobile || reduceMotion) return

    const bgColors = [
      'hsla(156, 98%, 26%, 1)',
      'hsla(15, 25%, 48%, 1)',
      'hsla(196, 100%, 34%, 1)',
      'hsla(292, 53%, 43%, 1)',
      'hsla(216, 66%, 27%, 1)',
    ]

    const bgTimeline = gsap.timeline()

    bgColors.forEach((value) => {
      bgTimeline.to('[data-animate="background"]', {
        backgroundColor: value,
      })
    })

    ScrollTrigger.create({
      animation: bgTimeline,
      trigger: '[data-animate="background"]',
      start: 'top top',
      end: 'bottom bottom',
      scrub: 2,
    })

    gsap.set('[data-animate]', { opacity: 0 })

    ScrollTrigger.batch('[data-animate]', {
      onEnter: (batch) => {
        batch.forEach((el: AnimatedElement, i: number) => {
          setAnimation(el, i)
        })
      },
      onEnterBack: (batch) => {
        batch.forEach((el: AnimatedElement, i: number) => {
          setAnimation(el, i, -1)
        })
      },
      onLeave: (batch) => {
        batch.forEach((el: AnimatedElement) => {
          // kill the timeline when leaving the viewport
          el.timeline?.kill()

          gsap.to(el.querySelector('img'), { opacity: 0 })
        })
      },
      onLeaveBack: (batch) => {
        batch.forEach((el: AnimatedElement) => {
          // kill the timeline when leaving the viewport
          el.timeline?.kill()

          gsap.to(el.querySelector('img'), { opacity: 0 })
        })
      },
    })

    function setAnimation(
      el: AnimatedElement,
      index: number = 0,
      direction?: -1 | 1,
    ) {
      direction = direction || 1

      const y = `${150 * direction}dvh`

      const tl = gsap.timeline()
      const animationStagger = 0.25

      const initialY = gsap.getProperty(el, 'y')

      tl.set(el, { opacity: 1 })

      tl.fromTo(
        el.querySelector('img'),
        { opacity: 0 },
        {
          opacity: 1,
          delay: index * animationStagger,
          duration: 1,
        },
      ).fromTo(
        el.querySelector('img'),
        { y },
        {
          y: initialY,
          delay: index * animationStagger,
          ease: 'circ.out',
          duration: 0.75,
        },
        0,
      )

      // store the timeline on the element
      el.timeline = tl
    }
  })
</script>
